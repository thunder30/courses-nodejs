<div class="mt-4">
    <div class="row">

        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card my-2">
                <img class="card-img-top" src="{{this.image}}" alt="{{this.image}}">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Đăng ký</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>